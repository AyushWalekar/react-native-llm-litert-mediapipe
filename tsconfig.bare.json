{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "strict": true,
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/index-bare.ts",
    "src/NativeMediaPipeLlm.ts",
    "src/MediaPipeLlmModule.ts",
    "src/MediaPipeLlm.types.ts",
    "src/ModelManagerBare.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "build",
    "example",
    "example-bare",
    "src/index.ts",
    "src/ExpoLlmMediapipeModule.ts",
    "src/ExpoLlmMediapipe.types.ts",
    "src/ModelManager.ts"
  ]
}
